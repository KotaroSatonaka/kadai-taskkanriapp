<h1>id = <%= @task.id %> Task Detail Page</h1>

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>Title</th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th>Task</th>
    <td><%= @task.content %></td>
  </tr>
</table>

<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'Delete', @task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger' %>